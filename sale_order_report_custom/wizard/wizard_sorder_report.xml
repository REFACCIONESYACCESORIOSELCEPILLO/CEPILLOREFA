<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_sorder_report_view_form" model="ir.ui.view">
        <field name="name">wizard.sorder.report.view.form</field>
        <field name="model">wizard.sorder.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from" />    
                        <field name="date_to" />    
                        <field name="warehouse_ids" widget="many2many_tags"/>    
                    </group>
                </group>
                    
                <footer>
                    <button name="print_report" string="Imprimir" type="object" default_focus="1" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_sorder_report_action" model="ir.actions.act_window">
        <field name="name">Ventas y Utilidad</field>
        <field name="res_model">wizard.sorder.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="wizard_sorder_report_menu"
        action="wizard_sorder_report_action"
        parent="sale.menu_sale_report"
        sequence="41"/>

</odoo>
