<templates xml:space="preserve">
    <t t-name="owl.VehicleDashboard" owl="1">

        <div class="vh-100 overflow-auto bg-muted p-4">
            <div class="row m-4 d-flex align-items-center">
                <div class="col-md-4">
                    <h1 class="mb-0">Vehicle Statistics</h1>
                </div>

                <div class="col-md-2">
                    <label for="start-date">Start Date</label>
                    <input type="date" id="start-date" class="form-control" t-att-value="state.startDate" t-on-change="onDateChange"/>

                    <!-- <input type="date" id="start-date" class="form-control" t-on-change="onDateChange"/> -->
                </div>
                <div class="col-md-2">
                    <label for="end-date">End Date</label>
                    <input type="date" id="end-date" class="form-control" t-att-value="state.endDate" t-on-change="onDateChange"/>

                    <!-- <input type="date" id="end-date" class="form-control" t-on-change="onDateChange"/> -->
                </div>
                <div class="col-md-2">
                    <label for="date-filter">Filter by</label>
                    <select id="date-filter" class="form-control" t-on-change="onDateFilterChange" t-att-value="state.custom">
                        <!-- <select id="date-filter" class="form-control" t-on-change="onDateFilterChange"> -->
                        <option value="none">None</option>
                        <option value="daily">Daily Sales</option>
                        <option value="weekly">Weekly Sales</option>
                        <option value="monthly">Monthly Sales</option>
                        
                    </select>
                </div>
            </div>

            <!-- Other content goes here -->

