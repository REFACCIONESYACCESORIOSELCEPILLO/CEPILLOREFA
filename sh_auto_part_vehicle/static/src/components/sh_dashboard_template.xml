            <div class="row m-4">
                <VehiclesCardall onClick.bind="viewallVehicles" name="'All Vehicles'" value="state.totalMotorcycles"/>
                <VehiclesModel onClick.bind="viewallVehiclesModel" name="'Vehicles Model'" value="state.totalModels"/>
                <VehiclesMake onClick.bind="viewallVehiclesMake " name="'Vehicles Make'" value="state.totalMakes"/>
                <VehiclesBrand onClick.bind="viewallVehiclesBrand " name="'Vehicles Brand'" value="state.totalBrands"/>
                <hr/>
                <VehiclesQuotations onClick.bind ="viewallQuotation" name="'Vehicles Quotations'" value="state.totalQuotations"/>
                <VehiclesSales   onClick.bind ="viewallSaleOrder" name="'Vehicles Sale Order'" value="state.totalSales"/>
                <Invoices   onClick.bind ="viewallInvoice" name="'Invoice'" value="state.totalInvoices"/>
                <Overdue  onClick.bind ="Overdue" name="'Over due'" value="state.overdue"/>

            </div>


            <div class="row m-4">
                <div class="col-lg-6 col-md-6 col-sm-6 m-0 p-0">
                    <div class="sh_vehicles_status shadow-sm border m-2 p-4 bg-white">
                        <h3 class="text-primary fw-bold">Top 5 Customer</h3>

                        <div class="mb-3">
                            <label for="chartType1" class="fw-bold">Select Chart Type:</label>
                            <select id="chartType1" class="form-control" t-on-change="onChartTypeChange">
                                <option value="bar">Bar Chart</option>
                                <option value="line">Line Chart</option>
                                <option value="pie">Pie Chart</option>
                                <option value="doughnut">Doughnut Chart</option>
                            </select>
                        </div>

                        <div class="bg-primary cursor-pointer">
                            <span class="text-white"/>
                        </div>
                        <div t-if="state.chartType === 'bar'" class="chart-container">
                            <VehicleChartRendorBar chartType="state.chartType"/>
                        </div>
                        <div t-if="state.chartType === 'line'" class="chart-container">
                            <VehicleChartRendorline chartType="state.chartType"/>
                        </div>
                        <div t-if="state.chartType === 'pie'" class="chart-container">
                            <VehicleChartRendorpie chartType="state.chartType"/>
                        </div>
                        <div t-if="state.chartType === 'doughnut'" class="chart-container">
                            <VehicleChartRendordoughnut chartType="state.chartType"/>
                        </div>
                    </div>
                </div>



                <div class="col-lg-6 col-md-6 col-sm-6 m-0 p-0">
                    <div class="sh_vehicles_status shadow-sm border m-2 p-4 bg-white">
                        <h3 class="text-primary fw-bold">Top 5 Products</h3>

                        <div class="mb-3">
                            <label for="chartType2" class="fw-bold">Select Chart Type:</label>
                            <select id="chartType2" class="form-control" t-on-change="onChartTypeChangeProducts">
                                <option value="line">Line Chart</option>
                                <option value="bar">Bar Chart</option>
                                <option value="pie">Pie Chart</option>
                                <option value="doughnut">Doughnut Chart</option>
                            </select>
                        </div>

                        <div class="bg-primary cursor-pointer">
                            <span class="text-white"/>
                        </div>
                        <div t-if="state.productcharttype === 'line'" class="chart-container">
                            <ProductLine timeFilter="state.timeFilter" chartType="state.productcharttype"/>
                        </div>
                        <div t-if="state.productcharttype === 'bar'" class="chart-container">
                            <ProductBar timeFilter="state.timeFilter" chartType="state.productcharttype"/>
                        </div>
                        <div t-if="state.productcharttype === 'pie'" class="chart-container">
                            <Productpie timeFilter="state.timeFilter" chartType="state.productcharttype"/>
                        </div>
                        <div t-if="state.productcharttype === 'doughnut'" class="chart-container">
                            <Productdoughnut timeFilter="state.timeFilter" chartType="state.productcharttype"/>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </t>
</templates>
